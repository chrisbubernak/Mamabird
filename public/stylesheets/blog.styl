//blog post styleing
.blog.date
  font-style italic
  font-size small
ul.blog
  padding 0em
li.blog 
  display inline-block
  list-style-type none
.postList
  border-right 2px solid
  border-color #c8c8c8
  overflow hidden
.sideBar
  float right
  padding-left 2em
  padding-right 2em
.recent
  color #ffd800
.post
  font-size medium
.spaceBelow
  margin-bottom 2em
.postTitle
  font-size x-large
.tags
  font-size small
.post img
  display block
  margin-left auto
  margin-right auto
  max-width 100%